{% extends 'KeosuCoreBundle:MainViews:content.html.twig' %}

{% block content %}
<script>
$(document).ready(function() {
	// Init table for quizz
	$('#content-table').dataTable({
			"bPaginate": true,
			"bLengthChange": true,
			"bFilter": true,
			"bSort": true,
			"bInfo": true,
			"bAutoWidth": true,
			"aoColumns": [
							null,
							null,
			]});
});
</script>
<div class="row">
	<div class="col-md-12">
		<div id="dynamic" class="table">
			<fieldset>
				<div class="clearfix">
		    		<h1 class="pull-left">Quizz</h1>
		    		<a class="right-button pull-right" href="{{ path('keosu_quizz_add') }}">
						<button class="btn btn-success" title="Create an quizz">
							New quizz
						</button>
					</a>
				</div>
				<table class="table table-striped table-hover clearfix" id="content-table" width="100%">
					<thead>
						<tr>
							<th>Title</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
					
					{% for quizz in quizzes %}
						<tr>
							<td>{{ quizz.title|raw }}</td>
							<td>
								<a href={{ path('keosu_quizz_results_viewlist',{'id':quizz.id}) }}>See results</a>&nbsp;&nbsp;
								<a href={{ path('keosu_quizz_edit',{'id':quizz.id}) }}><i class='glyphicon glyphicon-edit'></i></a>
								<a href={{ path('keosu_quizz_delete',{'id':quizz.id}) }}><i class='glyphicon glyphicon-remove'></i></a>
							</td>
						</tr>
    				{% endfor %}
					</tbody>
					<tfoot>
						<tr>
							<th>Title</th>
							<th></th>
						</tr>
					</tfoot>
				</table>
			</fieldset>
		</div>
	</div>
</div>
{% endblock %}

