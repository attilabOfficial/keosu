{% extends 'KeosuCoreBundle:MainViews:content.html.twig' %}

{% block title %}
	View Quizz Result
{% endblock %}

{% block content %}
	<script>
		$(document).ready(function() {

		});
	</script>
	<h1>Quizz result</h1>
	<div>Quizz : {{ quizz.title }}</div>
	<div>Date : {{ date | date('d M Y \\a\\t H:i:s') }}</div>
	<hr/>
	<div class="row">
		<div class="col-md-12">
			<div class="quizz-result">
				<ol>
				{% for questionResult in results %}
					<li>
					{{ questionResult.question.text }} ({{ questionResult.question.type }})
					{% if questionResult.question.type == 'freeText' %}
						<br/><b>{{ questionResult.userText }}</b>
					{% elseif questionResult.question.type == 'singleChoice' %}
						<ul>
						{% for answerResult in questionResult.answers %}
							<li>
								{% if answerResult.selected == true %}
									<input type="radio" checked disabled />
								{%  else %}
									<input type="radio" disabled />
								{% endif %}
								{{ answerResult.answer.text }} ({{ answerResult.answer.type }})
								{% if answerResult.selected == true and answerResult.answer.type == 'freeText' %}
								 : <b>{{ answerResult.userText }}</b>
								{% endif %}
							</li>
						{% endfor %}
						</ul>
					{% else %}
						<ul>
							{% for answerResult in questionResult.answers %}
								<li>
									{% if answerResult.selected == true %}
										<input type="checkbox" checked disabled />
									{%  else %}
										<input type="checkbox" disabled />
									{% endif %}
									{{ answerResult.answer.text }} ({{ answerResult.answer.type }})
									{% if answerResult.selected == true and answerResult.answer.type == 'freeText' %}
										: <b>{{ answerResult.userText }}</b>
									{% endif %}
								</li>
							{% endfor %}
						</ul>
					{% endif %}
					</li>
				{% endfor %}
				</ol>
			</div>
		</div>
	</div>
{% endblock %}

