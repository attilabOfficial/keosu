{% extends 'KeosuCoreBundle:MainViews:content.html.twig' %}

{% block content %}
<script>
$(document).ready(function() {
	// Init table for quizz
	$('#content-table').dataTable({
			"bPaginate": true,
			"bLengthChange": true,
			"bFilter": true,
			"bSort": true,
			"bInfo": true,
			"bAutoWidth": true,
			"aoColumns": [
							null,
							null
			]});
});
</script>
<div class="row table">
	<div class="col-md-12">
		<div id="dynamic">
			<fieldset>
				<div class="clearfix">
		    		<h1 class="pull-left">Form</h1>
		    		<a class="right-button pull-right" href="{{ path('keosu_form_add') }}">
						<button class="btn btn-success" title="Create a form">
							New form
						</button>
					</a>
				</div>
				<table class="table table-striped table-hover clearfix" id="content-table" width="100%">
					<thead>
						<tr>
							<th>Name</th>
							<th></th>
						</tr>
					</thead>
					<tbody>

					{% for form in forms %}
						<tr>
							<td class="title">{{ form.name|raw }}</td>
							<td class="actions">
								<a href={{ path('keosu_form_edit',{'id':form.id}) }}><i class='glyphicon glyphicon-edit'></i></a>
								<a href={{ path('keosu_form_delete',{'id':form.id}) }}><i class='glyphicon glyphicon-remove'></i></a>
							</td>
						</tr>
					{% endfor %}

					</tbody>
					<tfoot>
						<tr>
							<th>Name</th>
							<th></th>
						</tr>
					</tfoot>
				</table>
			</fieldset>
		</div>
	</div>
</div>
{% endblock %}
