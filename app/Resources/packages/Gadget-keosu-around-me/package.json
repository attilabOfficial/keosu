{
  "name": "keosu-around-me",
  "description": "display a map that show where your are",
  "version": "0.1",
  "type": "gadget",
  "configCordova": [
    {
      "plugin": [
        {
          "@attributes": {
            "name": "cordova-plugin-geolocation"
		  }
        }
      ]
    },
    {
      "gap:config-file": [
        {
          "@attributes": {
            "platform": "ios",
            "parent": "NSLocationWhenInUseUsageDescription",
            "overwrite": "false"
          }
        },
        {
          "@value": {
            "array": {
              "string": "Find locations around you"
            }
          }
        }
      ]
    }
  ],
  "pluginToInstall" : [
    "cordova plugin add cordova-plugin-geolocation"
  ],
  "param": [
    {
      "name": "title",
      "type": "text",
      "options": {
        "required": 0,
        "label": "Arround me title"
      }
    },
    {
      "name": "tag",
      "type": "text",
      "options": {
        "required": 0
      }
    },
    {
      "name": "cache",
      "type": "number",
      "options": {
        "label": "Cache in minute",
        "data": 10
      }
    },
    {
      "name": "timeout",
      "type": "number",
      "options": {
        "label": "Timeout in seconde",
        "data": 10
      }
    }
  ],
  "libJs": [
    "https://maps.googleapis.com/maps/api/js"
  ],
  "require": [
    {
      "name": "keosu-base",
      "version": ">=0.1"
    },
    {
      "name": "keosu-comments",
      "version": ">=0.1"
    },
    {
      "name": "lib-js",
      "version": ">=0.1"
    }
  ]
}

